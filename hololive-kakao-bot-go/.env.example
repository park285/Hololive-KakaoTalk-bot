# Iris Server Configuration
IRIS_BASE_URL=http://localhost:3000
IRIS_WS_URL=ws://localhost:3000/ws

# KakaoTalk Configuration
# 알림을 받을 카카오톡 방 이름들 (쉼표로 구분)
KAKAO_ROOMS=홀로라이브 알림방

# Holodex API Keys (최대 5개까지 로테이션)
HOLODEX_API_KEY_1=your_holodex_api_key_here
HOLODEX_API_KEY_2=
HOLODEX_API_KEY_3=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI Configuration (Optional - Fallback)
# OpenAI API Key for fallback when Gemini fails
OPENAI_API_KEY=
# Enable automatic fallback to OpenAI GPT-4o when Gemini fails (default: true)
OPENAI_ENABLE_FALLBACK=true

# Notification Settings
NOTIFICATION_ADVANCE_MINUTES=5,15,30
CHECK_INTERVAL_SECONDS=60

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/bot.log

# Bot Command Prefix
BOT_PREFIX=!
